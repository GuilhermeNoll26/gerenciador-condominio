<p id="notice"><%= notice %></p>

<h1>Pessoas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo pessoa</th>
      <th>Documento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.tipo_pessoa %></td>
        <td><%= pessoa.documento %></td>
        <td><%= link_to 'Ver dados', pessoa %></td>
        <td><%= link_to 'Editar', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Deletar', pessoa, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

