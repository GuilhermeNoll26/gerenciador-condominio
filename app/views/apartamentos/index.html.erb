<p id="notice"><%= notice %></p>

<h1>Apartamentos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Código Apto</th>
      <th>Nº Apartamento</th>
      <th>Estado de Ocupação</th>
      <th>Código Proprietário</th>
      <th>Código Inquilino</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartamentos.each do |apartamento| %>
      <tr>
        <td><%= apartamento.codApto %></td>
        <td><%= apartamento.numeroApto %></td>
        <td><%= apartamento.estadoOcupacao %></td>
        <td><%= apartamento.codProprietario %></td>
        <td><%= apartamento.codInquilino %></td>
        <td><%= link_to 'Ver dados', apartamento %></td>
        <td><%= link_to 'Editar', edit_apartamento_path(apartamento) %></td>
        <td><%= link_to 'Deletar', apartamento, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<a type="button" class="btn btn-primary" href=new_apartamento_path>Novo apartamento</a>
